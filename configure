#set -x
set -e

if [ "x"$SRCDIR != "x" ];
then
	cd $SRCDIR
	_SRCDIR_=$(pwd)
	cd - > /dev/null
else
	cd $(dirname $(which $0))
	_SRCDIR_=$(pwd)
	cd - > /dev/null
fi
export _SRCDIR_

mkdir -p $BUILDIR
cd $BUILDIR
export _BUILDIR_=$(pwd)
cd - > /dev/null

if [ "x"$DESTDIR != "x" ];
then
	mkdir -p $DESTDIR
	cd $DESTDIR
	DESTDIR=$(pwd)
	cd - > /dev/null
fi
export DESTDIR

export PREFIX

make -C $_BUILDIR_ -f $_SRCDIR_/conf.mk conf

